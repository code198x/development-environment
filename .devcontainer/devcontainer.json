{
    "name": "Code Like It's 198x Retro Development",
    "dockerComposeFile": "../docker-compose.yml",
    "service": "tools",
    "workspaceFolder": "/workspace",

    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "files.associations": {
                    "*.asm": "asm-collection",
                    "*.s": "asm-collection",
                    "*.inc": "asm-collection"
                },
                "editor.tabSize": 8,
                "editor.insertSpaces": false,
                "editor.rulers": [40, 80],
                "editor.fontFamily": "'Fira Code', 'Courier New', monospace",
                "editor.fontSize": 14,
                "workbench.colorTheme": "Monokai"
            },
            "extensions": [
                "13xforever.language-x86-64-assembly",
                "jsmith.6502-asm",
                "emeryberger.vscode-wla-dx",
                "ms-azuretools.vscode-docker",
                "streetsidesoftware.code-spell-checker",
                "wayou.vscode-todo-highlight",
                "vscode-icons-team.vscode-icons"
            ]
        }
    },

    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "installZsh": true,
            "configureZshAsDefaultShell": false,
            "installOhMyZsh": true,
            "upgradePackages": true,
            "username": "code198x"
        },
        "ghcr.io/devcontainers/features/git:1": {
            "version": "latest",
            "ppa": false
        }
    },

    "mounts": [
        "source=${localWorkspaceFolder}/workspace,target=/workspace,type=bind",
        "source=${localWorkspaceFolder}/projects,target=/projects,type=bind",
        "source=${localWorkspaceFolder}/resources,target=/resources,type=bind,readonly"
    ],

    "postCreateCommand": "echo 'Welcome to Code Like It's 198x!' && echo 'Run: code198x help' for commands",

    "remoteUser": "code198x"
}