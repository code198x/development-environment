10 REM *** NUMBER HUNTER ***
20 PRINT CHR$(147)
30 POKE 53280,0: POKE 53281,0
40 PRINT
50 PRINT "  NUMBER HUNTER"
60 PRINT "  ============="
70 PRINT
80 PRINT "GUESS THE NUMBER 1-100"
90 PRINT
100 PRINT "PRESS ANY KEY TO START"
110 GET K$: IF K$="" THEN 110
120 GOTO 200
200 REM *** SETUP GAME ***
210 SC=0: LI=7
220 TA=INT(RND(1)*100)+1
230 GOTO 300
300 REM *** DISPLAY STATUS ***
310 PRINT CHR$(147)
320 POKE 53280,6: POKE 53281,6
330 PRINT "NUMBER HUNTER"
340 PRINT "============="
350 PRINT
360 PRINT "SCORE: "; SC
370 PRINT "GUESSES LEFT: "; LI
380 PRINT
390 PRINT "GUESS (1-100): ";
400 INPUT GU
410 GOTO 500
500 REM *** PROCESS GUESS ***
510 IF GU<1 THEN GOTO 600
520 IF GU>100 THEN GOTO 600
530 IF GU=TA THEN GOTO 700
540 REM WRONG GUESS
550 LI=LI-1
560 IF LI<1 THEN GOTO 800
570 REM GIVE HINT
580 IF GU<TA THEN PRINT "TOO LOW!"
590 IF GU>TA THEN PRINT "TOO HIGH!"
595 FOR I=1 TO 300: NEXT I
597 GOTO 300
600 REM INVALID INPUT
610 PRINT "ENTER 1-100 ONLY!"
620 FOR I=1 TO 300: NEXT I
630 GOTO 300
700 REM *** WIN ***
710 PRINT CHR$(147)
720 POKE 53280,5: POKE 53281,13
730 PRINT
740 PRINT "  CORRECT!"
750 PRINT
